<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bloody Hospital - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header class="top-bar">
        <a href="/" class="logo">BLOODY HOSPITAL</a>
        <nav class="nav-links">
            <a href="/#info">Bilgi</a>
            <a href="/#speedrunners">Speedrunners</a>
            <a href="/#gallery">Galeri</a>
            <a href="#about">Hakkında</a>
        </nav>
        <div class="nav-actions">

            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <span style="color:red; margin-right:10px;">@User.Identity.Name</span>
                <form method="post" action="/Login?handler=Logout" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-login">ÇIKIŞ YAP</button>
                </form>
            }
            else
            {
                <a href="/Login" class="btn-login">GİRİŞ YAP</a>
            }
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer id="about">
        <div class="footer-content">
            <p>&copy; 2026 Bloody Hospital. Dünyanın En Korkunç Oyunu. Tüm Hakları Saklıdır.</p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>